<mapper namespace="ShopDAO">

	
	
	
	<select id="getProductDetail" parameterType="hashmap" resultType="product">
	
select * 


from (select rownum as rnum,product.p_id,product.p_name,product.p_price,product.p_cat,product.p_quan from product where product.p_cat=#{cat} order by product.p_id)


where <![CDATA[rnum>=]]>#{start} and <![CDATA[rnum<=]]>#{end}

	
	</select>
	
	
	
	<select id ="getOneProduct" parameterType="product" resultType="product">
	
	select * from product where p_id=#{p_id}
	
	</select>
	
	
	<select id="getCatTotal" parameterType="product" resultType="int">
	
	select count(*) from product where p_cat=#{p_cat}
	
	</select>
